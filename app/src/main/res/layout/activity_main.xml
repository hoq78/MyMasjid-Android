<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/bg">



<TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:background="#806C6C6C"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constrainedWidth="true"

        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_height="0dp">


    <TableRow
        android:id="@+id/masjidNameRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/masjidNametxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MasjidName"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/prayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/prayer"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textScaleX="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="17sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:enabled="false"
            android:gravity="center"
            android:text="Start"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textScaleX="1"
            android:textSize="24sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="24sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/jamaatTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:enabled="false"
            android:gravity="center|center_horizontal|center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Jamaa'at"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="5sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/tJamaat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:enabled="false"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Tomorrow's Jamaa'at"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textScaleX="1"
            android:textSize="15sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="10sp"
            app:autoSizeTextType="uniform" />
    </TableRow>

    <TableRow
