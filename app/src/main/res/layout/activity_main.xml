    <TableRow
        android:id="@+id/countDownRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/common_google_signin_btn_text_light_default">

        <TextView
            android:id="@+id/countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:gravity="center|clip_vertical|center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="10sp" />
    </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/marquee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="1"
        android:background="#806C6C6C"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textColor="#F6F4F4"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="35sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:ignore="TextViewEdits"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:background="#80454343"
        android:clickable="true"
        android:gravity="center_vertical"
        app:title="@string/app_name"
        app:titleMarginStart="@android:dimen/app_icon_size"
        app:titleTextColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-6dp"
        tools:textAlignment="center" />


    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0"
        android:background="@drawable/ic_settings_blue_24dp"
        android:contentDescription="@string/action_settings"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/ic_settings_blue_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/signout"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:onClick="logout"
        android:text="@string/log_out"
        android:textColor="#007AFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#D33A3A3A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/vidbutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@color/cardview_shadow_end_color"
            android:lines="2"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Live Video"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button

            android:id="@+id/audioBtn"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:background="@color/cardview_shadow_end_color"
            android:lines="2"
            android:maxLines="4"
            android:singleLine="false"
            android:text="@string/live_adhaan"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageButton
        android:id="@+id/refreshButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_refresh_black_24dp"
        android:clickable="true"
        android:onClick="refreshButton"
        app:layout_constraintEnd_toStartOf="@+id/signout"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>